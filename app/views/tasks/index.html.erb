<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed ? "☑️" : "◻️" %>
     <%= link_to task.title, task_path(task) %>
     <%= link_to "🚮", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
     </li>
  <% end %>
</ul>


<li><%= link_to "Create a new task", new_path %></li>
